{
  "name": "vane-web3-wasm-tests",
  "version": "1.0.0",
  "description": "WASM integration tests for Vane Web3",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:browser": "VITEST_BROWSER=true vitest run",
    "test:browser:watch": "VITEST_BROWSER=true vitest",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "build:wasm": "cd ../../node/wasm && wasm-pack build --target web --out-dir pkg",
    "pretest": "bun run build:wasm",
    "dev": "vitest --watch",
    "build": "bun run build:wasm"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.3.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "playwright": "^1.48.0",
    "vitest": "^3.2.4",
    "webdriverio": "^9.1.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@wasmer/sdk": "^0.9.0",
    "viem": "^2.21.62"
  }
}