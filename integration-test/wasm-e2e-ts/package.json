{
  "name": "wasm-minimal-test",
  "type": "module",
  "scripts": {
    "test": "bunx vitest",
    "test:run": "bunx vitest run",
    "start-relay": "bun run ../../scripts/start-relay.ts",
    "test:with-relay": "bun run ../../scripts/start-relay.ts & sleep 5 && bunx vitest run; kill %1",
    "build-and-test": "../../scripts/run_e2e.sh",
    "build-wasm": "cd ../../node/wasm && cargo build --target wasm32-unknown-unknown --release && wasm-pack build --target web --out-dir pkg",
    "build-relay": "cd ../../ && cargo build --release",
    "build-wasm-package": "../../scripts/build-wasm-package.sh"
  },
  "devDependencies": {
    "@vitest/browser": "^3.2.4",
    "playwright": "1.55.0",
    "typescript": "^5.0.0",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@polkadot/keyring": "^13.5.6",
    "@polkadot/util-crypto": "^13.5.6",
    "@solana/kit": "^4.0.0",
    "@solana/spl-token": "^0.4.14",
    "@solana/spl-token-metadata": "^0.1.6",
    "@vitest/ui": "^3.2.4",
    "bs58": "^6.0.0",
    "buffer": "^6.0.3",
    "process": "^0.11.10",
    "tweetnacl": "^1.0.3",
    "viem": "^2.35.1"
  }
}
